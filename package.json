{
  "name": "maplibre-gl-nightlayer",
  "version": "1.0.0-alpha.4",
  "description": "A Night Layer for MapLibre GL JS",
  "type": "module",
  "main": "dist/main.js",
  "module": "dist/main.js",
  "types": "dist/main.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "dev": "vite playground/",
    "build": "pnpm run build:esm && pnpm run build:types",
    "build:esm": "esbuild src/main.ts --minify --outfile=dist/main.js",
    "build:types": "tsc --declaration --emitDeclarationOnly --declarationDir './dist'",
    "lint": "biome lint ./src",
    "lint:fix": "biome lint ./src --write",
    "format": "biome format ./src",
    "format:fix": "biome format ./src --write",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "maplibre",
    "daynight",
    "earth",
    "shadow",
    "terminator"
  ],
  "author": "kikuchan98@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "esbuild": "^0.24.0",
    "gl-matrix": "^3.4.3",
    "maplibre-gl": "^4.7.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.11"
  }
}
